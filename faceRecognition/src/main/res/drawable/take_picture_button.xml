<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/circle_yellow"
         android:state_pressed="true" ></item>
    <item android:drawable="@drawable/circle_yellow"
        android:state_focused="true" />
    <!--Order is important. When presed and focused actions are false, default is applied-->
    <item android:drawable="@drawable/circle_blue" />
</selector>