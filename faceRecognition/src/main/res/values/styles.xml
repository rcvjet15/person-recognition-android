<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/CustomAppActionBar</item>
    </style>

    <style name="CustomAppActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#536DFE</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">#E3F2FD</item>
    </style>


    <style name="appButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/appBtnColor</item>
        <item name="android:textColor">@color/appBtnTextColor</item>
        <!--<item name="android:textAlignment">center</item>-->
        <!--<item name="android:textAllCaps">false</item>-->
    </style>

    <style name="actionFooter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/action_footer</item>
    </style>

    <style name="actionFooterButton" parent="appButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <!-- Container must have weigthSum = 100-->
        <item name="android:layout_weight">45</item>
    </style>


    <!-- Main activity -->
    <style name="mainActivityButton" parent="appButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="mainActivityButtonLeft" parent="mainActivityButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="mainActivityButtonRight" parent="mainActivityButton">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!-- Recognize activity -->
    <style name="recognizeActivityButton" parent="appButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">33</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Person activity -->
    <style name="textViewPersonData">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <!--<item name="android:gravity">center_horizontal</item>-->
    </style>

    <style name="personActivityActionFooter" parent="actionFooter">
        <item name="android:visibility">gone</item>
    </style>

    <!-- Settings Activity -->
    <style name="settingsActivityLinearLayoutContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">100</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="settingsActivityLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">35</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settingsActivityInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">65</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>


